PROCEDURE "procedures.events.erp::PR_EXTRACT_PAYMENT_FULLFILLMENT_EVENT" (
	IN IV_MODE INTEGER DEFAULT 0
)
   LANGUAGE SQLSCRIPT
   SQL SECURITY INVOKER
   --DEFAULT SCHEMA <default_schema_name>
    AS
BEGIN
   /*************************************
       Write your procedure logic 
   *************************************/
	DECLARE LV_PYMNT_FULF_1 NVARCHAR(500) := 'EPO Fulfilled';
	DECLARE LV_PYMNT_FULF_2 NVARCHAR(500) := 'Payment Arrangement Fulfilled';
   
	DECLARE LV_PYMNT_FULF_1_GRP NVARCHAR(500) := 'Payment';
	DECLARE LV_PYMNT_FULF_2_GRP NVARCHAR(500) := 'Payment';
	DECLARE LV_PYMNT_FULF1_MAX_SEQ_ID INTEGER;
	DECLARE LV_PYMNT_FULF2_MAX_SEQ_ID INTEGER;
	DECLARE LV_NEW_MAX_SEQ_ID INTEGER;
    DECLARE EXIT HANDLER FOR SQLEXCEPTION
	SELECT ::SQL_ERROR_CODE, ::SQL_ERROR_MESSAGE FROM "synonyms::dummy";
	
	CALL "procedures.utils::PR_DELETE_ALL_DATA_FOR_EVENT"(IV_MODE=>:IV_MODE, IV_EVENT_NAME=>:LV_PYMNT_FULF_1);
	CALL "procedures.utils::PR_DELETE_ALL_DATA_FOR_EVENT"(IV_MODE=>:IV_MODE, IV_EVENT_NAME=>:LV_PYMNT_FULF_2);
	
	SELECT OUT_MAX_SEQ_ID into LV_PYMNT_FULF1_MAX_SEQ_ID from "functions::TF_GET_MAX_SEQID_EVENT"(:LV_PYMNT_FULF_1);
	SELECT OUT_MAX_SEQ_ID into LV_PYMNT_FULF2_MAX_SEQ_ID from "functions::TF_GET_MAX_SEQID_EVENT"(:LV_PYMNT_FULF_2);
	IF :LV_PYMNT_FULF1_MAX_SEQ_ID IS NULL THEN 
		LV_PYMNT_FULF1_MAX_SEQ_ID = 0;
	END IF;
	IF :LV_PYMNT_FULF2_MAX_SEQ_ID IS NULL THEN 
		LV_PYMNT_FULF2_MAX_SEQ_ID = 0;
	END IF;
	LT_CUST_EDITED_FULF1 = SELECT GPART FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPP" inner join
							"db::app.Customer" on EXT_ID = GPART WHERE 
						"Z_RUN_SEQ_ID">:LV_PYMNT_FULF1_MAX_SEQ_ID;
	LT_CUST_ID_EDITED_FULF1 = select to_int(GPART) as "CUST_ID" from :LT_CUST_EDITED_FULF1;
	
	LT_CUST_EDITED_FULF2 = SELECT GPART FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPP" inner join
							"db::app.Customer" on EXT_ID = GPART WHERE 
						"Z_RUN_SEQ_ID">:LV_PYMNT_FULF2_MAX_SEQ_ID;
	LT_CUST_ID_EDITED_FULF2 = select to_int(GPART) as "CUST_ID" from :LT_CUST_EDITED_FULF2;
	
	CALL "procedures.utils::PR_DELETE_EVENT_DATA_FOR_CUST"(
		IV_EVENT_NAME=>:LV_PYMNT_FULF_1,
		IT_CUST=>:LT_CUST_ID_EDITED_FULF1
   );
   CALL "procedures.utils::PR_DELETE_EVENT_DATA_FOR_CUST"(
		IV_EVENT_NAME=>:LV_PYMNT_FULF_2,
		IT_CUST=>:LT_CUST_ID_EDITED_FULF2
   );
   LT_CUST_ID = SELECT GPART FROM :LT_CUST_EDITED_FULF1 UNION SELECT GPART FROM :LT_CUST_EDITED_FULF2;

   /*EPO Fufilment*/
	INSERT INTO "db::app.CustomerEvents"
	select 
		SAP.CUST_ID as CUST_ID,
		null as EVENT_ID,
		:LV_PYMNT_FULF_1_GRP as EVENT_GROUP,
		:LV_PYMNT_FULF_1 as EVENT_NAME,
		CAST(DUEDATE as date) as INIT_DATE,
		NULL as END_DATE,
		1 as EVENT_VALUE,
		:LV_PYMNT_FULF_1 as DESCRIPTION,
		LEFT(DUEDATE,6)  as INIT_TS,
		NULL  as END_TS
	from(
		SELECT DISTINCT a.GPART,DUEDATE FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPP" a 
		LEFT JOIN (SELECT PPKEY,MAX(PRDAT) as DueDate FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPPD" GROUP BY PPKEY) b 
		ON  a.PPKEY=b.PPKEY
		INNER JOIN :LT_CUST_ID DELT 
		ON a.GPART = DELT.GPART
		WHERE a.PPKEY IN (
		SELECT PPKEY FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPPP"
		WHERE OPBEL IN (
		SELECT OPBEL FROM"osr.edw.staging.td.rms.proxy.synonym::CV_DFKKOP" WHERE KOFIZ='LT' 
		)) AND PPSTA = '1' AND PPCAT='Z7' 
		) a
	INNER JOIN "db::app.Customer" as SAP on SAP.EXT_ID=a.GPART
	;
	
	
	
	/*PP Fufilment*/
	/*Promise to pay fufilled*/
	INSERT INTO "db::app.CustomerEvents"
	select 
		SAP.CUST_ID as CUST_ID,
		NULL as EVENT_ID,
		:LV_PYMNT_FULF_2_GRP as EVENT_GROUP,
		:LV_PYMNT_FULF_2 as EVENT_NAME,
		CAST(DUEDATE as date) as INIT_DATE,
		NULL as END_DATE,
		1 as EVENT_VALUE,
		:LV_PYMNT_FULF_2 as DESCRIPTION,
		LEFT(DUEDATE,6)  as INIT_TS,
		NULL  as END_TS
	from(
		SELECT DISTINCT a.GPART,DUEDATE FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPP" a 
		LEFT JOIN (SELECT PPKEY,MAX(PRDAT) as DueDate FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPPD" GROUP BY PPKEY) b 
		ON  a.PPKEY=b.PPKEY
		INNER JOIN :LT_CUST_ID DELT 
		ON a.GPART = DELT.GPART
		WHERE a.PPKEY IN (
		SELECT PPKEY FROM"osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPPP"
		WHERE OPBEL IN (
		SELECT OPBEL FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKOP" WHERE KOFIZ='LT'
		)) AND PPSTA='1'  AND PPCAT!='Z7'
		) a
	INNER JOIN "db::app.Customer" as SAP on SAP.EXT_ID=a.GPART;

   	-- Generate event ID
    CALL "procedures.utils::PR_UTIL_POPULATE_EVENT_ID"(I_EVENT_SOURCE => 'ERP', I_TYPE => 3);	
    
	SELECT MAX(Z_RUN_SEQ_ID) INTO LV_NEW_MAX_SEQ_ID FROM "osr.edw.staging.td.rms.proxy.synonym::CV_DFKKPP";
	
	UPDATE "db::adm.config.event.name" 
		SET "ICON" = NULL, "PRIORITY" = 1, "LATEST_EXTRACTED_SEQUENCE" = LV_NEW_MAX_SEQ_ID, "LAST_EXTRACTED_DATE" = CURRENT_UTCTIMESTAMP
		WHERE UPPER("EVENT_NAME") = UPPER(LV_PYMNT_FULF_1)
		AND UPPER("CATEGORY_NAME") = UPPER(LV_PYMNT_FULF_1_GRP);
		
	UPDATE "db::adm.config.event.name" 
		SET "ICON" = NULL, "PRIORITY" = 1, "LATEST_EXTRACTED_SEQUENCE" = LV_NEW_MAX_SEQ_ID, "LAST_EXTRACTED_DATE" = CURRENT_UTCTIMESTAMP
		WHERE UPPER("EVENT_NAME") = UPPER(LV_PYMNT_FULF_2)
		AND UPPER("CATEGORY_NAME") = UPPER(LV_PYMNT_FULF_2_GRP);
   
END