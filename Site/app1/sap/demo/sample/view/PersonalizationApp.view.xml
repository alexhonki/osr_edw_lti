<mvc:View height="100%"
	xmlns:mvc="sap.ui.core.mvc"
	controllerName="sap.demo.sample.controller.PersonalizationApp"
	displayBlock="true"
	xmlns:t="sap.ui.table"
	xmlns="sap.m">
	<Page title="Personalization Demo" height="100%" class="sapUiContentPadding">
		<content>
			<t:Table
				id="PersonalizationTable"
				rows="{/ProductCollection}"
				title="Products"
				selectionMode="MultiToggle"
				visibleRowCount="3">
				<t:columns>
					<t:Column width="11rem">
						<Label text="Product Name" />
						<t:template>
							<Text text="{Name}"/>
						</t:template>
					</t:Column>
					<t:Column width="11rem">
						<Label text="Product Id" />
						<t:template>
							<Input value="{ProductId}"/>
						</t:template>
					</t:Column>
					<t:Column width="6rem" hAlign="End">
						<Label text="Quantity" />
						<t:template>
							<Label text="{Quantity}" />
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</content>
	</Page>
</mvc:View>
